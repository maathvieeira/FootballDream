<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesActivity">

    <RelativeLayout
        android:id="@+id/layCab"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorBack">

        <ImageView
            android:id="@+id/imgTime1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="X"
            android:textAlignment="center"
            android:textSize="100sp"
            android:layout_marginTop="60dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/txtCamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cmapeonato Brasileiro"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/txtEstadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stadium"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:id="@+id/imgTime2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/layCab"
        android:background="@color/colorBlack">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line">

        <ImageView
            android:id="@+id/imgAc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"/>


        <ImageView
            android:id="@+id/imgCanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txtDataDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="29/09/2018"
        android:layout_below="@id/layAc"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        android:layout_below="@id/txtDataDet"
        android:layout_marginTop="20dp"
        ads:adUnitId="ca-app-pub-2111681283486733/8572793973">

    </com.google.android.gms.ads.AdView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        android:layout_below="@id/txtDataDet"
        android:layout_marginTop="20dp"
        ads:adUnitId="ca-app-pub-2111681283486733/5658979734">

    </com.google.android.gms.ads.AdView>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adView2"
        android:text="Voltar"
        android:background="@color/colorButton"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorFont"/>

</RelativeLayout>